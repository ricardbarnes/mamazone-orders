FROM openjdk:17-jdk-slim

WORKDIR /app

COPY api/build/libs/api-0.0.1-SNAPSHOT.jar app.jar

ENV SOCKET_COMMAND_BUS_HOST=${SOCKET_COMMAND_BUS_HOST}
ENV SOCKET_COMMAND_BUS_PORT=${SOCKET_COMMAND_BUS_PORT}
ENV SOCKET_QUERY_BUS_HOST=${SOCKET_QUERY_BUS_HOST}
ENV SOCKET_QUERY_BUS_PORT=${SOCKET_COMMAND_BUS_PORT}

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]